<Window x:Class="MicroclimateSystem.HistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MicroclimateSystem"
        mc:Ignorable="d"
        Title="HistoryWindow" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="HistoryDataGrid" AutoGenerateColumns="True" Margin="10"/>
        <Button Content="Экспорт в PDF" HorizontalAlignment="Right" VerticalAlignment="Bottom" Style="{StaticResource ButtonStyle}"
            Margin="0,0,10,10" Click="ExportToPdf_Click" Width="155" Height="39"/>
    </Grid>
</Window>
